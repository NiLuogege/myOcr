<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_250"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ec"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_150"
        android:background="@drawable/shape_corner">

        <TextView
            android:id="@+id/guanbi_tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5"
            android:text="关闭"
            android:textColor="@color/colors_fontDarkBlue"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/danyuan_tv_main"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_25"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />


        <LinearLayout
            android:id="@+id/la2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/danyuan_tv_main"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="修改建筑物名称:"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_danyuan2_main"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/endit_add"
                android:hint="输入建筑物名称"
                android:paddingLeft="@dimen/dp_5"
                android:textColor="@color/blark" />


        </LinearLayout>

        <Button
            android:id="@+id/ceng_button_main"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/endit_add"
            android:text="确定修改" />

    </RelativeLayout>

</LinearLayout>