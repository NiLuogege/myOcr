<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_75"
    android:background="@color/edit_yes"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_15"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/base_toobar_lift_break_im"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center" />

        <com.example.ruifight_3.saolouruifight.widget.MarqueTextView
            android:id="@+id/base_layout_toobar_title_tv"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#fefeff"
            android:textSize="@dimen/sp_18" />

        <!--  表示不间断无限次 android:marqueeRepeatLimit="marquee_forever"-->

        <Button
            android:id="@+id/base_toobar_right_button"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/base_addjza_sha"
            android:visibility="gone" />


    </LinearLayout>

    <ImageView
        android:id="@+id/base_toobar_right_im"
        android:layout_width="20dp"
        android:layout_height="20dp" />

</LinearLayout>