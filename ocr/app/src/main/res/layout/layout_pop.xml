<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <Button
        android:id="@+id/bt_l"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/banyuan_pop"
        android:textColor="@color/colors_fontWhite"
        android:text="上传" />

    <Button
        android:id="@+id/bt_r"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/bt_l"
        android:background="@drawable/banyuan_popnoe"
        android:textColor="@color/colors_fontHome"
        android:text="清除" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/bt_r"
        android:background="@drawable/popuplist_default_arrow"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_10" />

</RelativeLayout>
