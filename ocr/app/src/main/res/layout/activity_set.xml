                <ImageView
                    android:id="@+id/updae_image"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/update" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/updae_image"
                    android:text="离线采集未上传"
                    android:textColor="@color/colors_font3"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:id="@+id/updae_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/colors_font2A"
                    android:textSize="@dimen/sp_16" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/colors_bg"></View>


            <RelativeLayout
                android:id="@+id/updae_item4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:background="@drawable/setback">

                <ImageView
                    android:id="@+id/ocr_image"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@drawable/ocr" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/ocr_image"
                    android:text="关闭离线ocr"
                    android:textColor="@color/colors_font3"
                    android:textSize="@dimen/sp_16" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ocr_image"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="关闭后默认开启在线ocr(需要网络)"
                    android:textSize="@dimen/sp_9" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_setactivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    app:theme="@style/MySwitch" />


            </RelativeLayout>


            <View
