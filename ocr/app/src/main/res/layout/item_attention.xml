<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:id="@+id/main_recycle_item_im"
            android:src="@mipmap/jieshou"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_36" />

        <TextView
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_recycle_item_im"
            android:textSize="@dimen/sp_13"
            android:id="@+id/main_recycle_item_tv"
            android:textColor="@color/colors_font56"
            android:text="苏家屯凤凰岭路"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/yuanyin_tv"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/main_recycle_item_im"
            android:textSize="@dimen/sp_11"
            android:textColor="@color/colors_font9"
            android:text="1号楼"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <View
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></View>

</LinearLayout>